---
// src/pages/index.astro
import Layout from "../layouts/Layout.astro";
import ImageColumn from "../components/ImageColumn.astro";
import FeaturesCard from "../components/FeaturesCard.astro";
import SignupForm from "../components/SignupForm.astro";
import TrustSection from "../components/TrustSection.astro";
import FaqAccordion from "../components/FaqAccordion.astro"; // Added FAQ component import
---

<Layout
    title="LatteArtist: Latte Art Progress Tracking App for iOS"
    description="Stop guessing with latte art! LatteArtist for iOS logs pours, tracks techniques & visualizes progress. The essential journal for home baristas. Improve faster!"
>
    <section class="w-full max-w-5xl mx-auto px-4">
        <div class="md:flex md:gap-8">
            {/* Left column - text and signup form */}
            <div class="md:w-3/5 md:mt-8">
                <h1 class="text-2xl md:text-4xl font-bold mb-6">
                    Turn Latte Art Practice into Progress
                </h1>
                <p class="text-lg md:text-xl font-normal text-secondary mb-4">
                    Tired of scattered photos and guesswork in your latte art
                    practice?
                </p>
                <p class="md:text-lg font-light text-secondary mb-8">
                    LatteArtist is a calm, focused iOS journal that helps you
                    log your pours, spot trends, and actually see your
                    improvement over time.
                </p>
                <SignupForm />
            </div>

            {/* Right column - image */}
            <div class="mt-8 md:mt-0 md:w-2/5">
                <ImageColumn />
            </div>
        </div>
    </section>

    <main class="w-full max-w-4xl mx-auto px-4">
        <div class="mt-16 md:mt-20 lg:mt-24">
            <FeaturesCard />
        </div>
        <div class="mt-16 md:mt-20 lg:mt-24">
            <TrustSection />
        </div>
        {/* Added FAQ component inside main */}
        <div class="mt-16 md:mt-20 lg:mt-24">
            <FaqAccordion />
        </div>
    </main>
</Layout>
