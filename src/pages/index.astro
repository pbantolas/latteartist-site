---
// src/pages/index.astro
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import ImageColumn from "../components/ImageColumn.astro";
import FeaturesCard from "../components/FeaturesCard.astro";
import SignupForm from "../components/SignupForm.astro";
import TrustSection from "../components/TrustSection.astro";
---

<Layout
    title="LatteArtist: Latte Art Progress Tracking App for iOS"
    description="Tired of scattered photos and guesswork in your latte art practice? LatteArtist is a simple iOS journal designed to help you intentionally log pours, track techniques, and clearly visualize your improvement over time. Developed with feedback from the home barista community on Reddit."
>
    <Header />

    <div class="mb-8 md:flex md:gap-8 md:max-w-6xl md:mx-auto">
        {/* Left column - descriptive text */}
        <div class="md:w-2/5">
            <p class="text-xl font-normal text-secondary mb-4">
                Tired of scattered photos and guesswork in your latte art
                practice?
            </p>
            <p class="text-lg font-light text-secondary">
                LatteArtist is a calm, focused iOS journal that helps you log
                your pours, spot trends, and actually see your improvement over
                time.
            </p>
        </div>

        {/* Vertical divider - only visible on md screens and up */}
        <!-- <div
            class="hidden md:block border-l border-gray-200 dark:border-gray-700 self-stretch mx-4"
        >
        </div> -->

        {/* Right column - signup form */}
        <div class="mt-8 md:mt-0 md:w-3/5">
            <SignupForm />
        </div>
    </div>

    <main
        class="flex flex-col items-center gap-12 mb-16 md:flex-row md:items-start"
    >
        {/* Increased bottom margin */}
        <ImageColumn />
        <div
            class="flex flex-col justify-center h-auto w-full max-w-lg text-left md:flex-1 md:h-full md:max-w-none"
        >
            <FeaturesCard />
        </div>
    </main>

    <TrustSection />
</Layout>

