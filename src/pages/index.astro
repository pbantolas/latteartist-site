---
// src/pages/index.astro
import Layout from "../layouts/Layout.astro";
import ImageColumn from "../components/ImageColumn.astro";
import FeaturesCard from "../components/FeaturesCard.astro";
import SignupForm from "../components/SignupForm.astro";
import TrustSection from "../components/TrustSection.astro";
import FaqAccordion from "../components/FaqAccordion.astro"; // Added FAQ component import
---

<Layout>
    <section class="w-full max-w-5xl mx-auto px-4">
        <div class="md:flex md:gap-8">
            {/* Left column - text and signup form */}
            <div class="md:w-3/5 md:mt-8 animate-fadeInUp opacity-0">
                <h1 class="text-2xl md:text-4xl font-bold mb-6">
                    Stop Guessing, Start Improving. Understand What Makes A
                    Perfect Latte Art Pour.
                </h1>
                <p class="text-lg md:text-xl font-normal text-secondary mb-4">
                    Frustrated by 'random good days' and inconsistent pours?
                    Wish you could remember the details of that one great tulip?
                </p>
                <p class="md:text-lg font-light text-secondary mb-8">
                    Take control of your latte art journey. LatteArtist helps
                    you quickly capture key details for each pour, track your
                    progress visually, and stay motivated by understanding
                    exactly how you're improving.
                </p>
                <SignupForm />
            </div>

            {/* Right column - image */}
            <div class="mt-8 md:mt-0 md:w-2/5">
                <ImageColumn />
            </div>
        </div>
    </section>

    <div class="max-w-4xl mx-auto px-4">
        <div class="mt-16 md:mt-20 lg:mt-24">
            <FeaturesCard />
        </div>
        <div class="mt-16 md:mt-20 lg:mt-24">
            <TrustSection />
        </div>
        {/* Added FAQ component inside main */}
        <div class="mt-16 md:mt-20 lg:mt-24">
            <FaqAccordion />
        </div>
    </div>
</Layout>
