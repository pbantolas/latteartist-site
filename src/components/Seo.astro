---
interface Props {
    title?: string;
    description?: string;
    ogTitle?: string;
    ogDescription?: string;
    ogImage?: string;
    ogUrl?: string;
    twitterTitle?: string;
    twitterDescription?: string;
    twitterImage?: string;
}

const {
    title = "LatteArtist: Improve Latte Art â€“ iOS Tracker | Stop Guessing",
    description = "Inconsistent latte art? LatteArtist for iOS logs pours, tracks variables & shows real progress. Master your technique and turn practice into perfection!",
    ogTitle = "LatteArtist (iOS): Understand & Perfect Your Latte Art Pours",
    ogDescription = "Ditch the latte art guesswork! LatteArtist (iOS) helps you log, analyze, and visually track your pours to see real improvement. Join the waitlist!",
    ogImage = "https://latteartist.coffeeatpetros.com/assets/card-image.jpg",
    ogUrl = "https://latteartist.coffeeatpetros.com/",
    twitterTitle = "LatteArtist (iOS): Understand & Perfect Your Latte Art Pours",
    twitterDescription = "Ditch the latte art guesswork! LatteArtist (iOS) helps you log, analyze, and visually track your pours to see real improvement. Join the waitlist!",
    twitterImage = "https://latteartist.coffeeatpetros.com/assets/card-image.webp",
} = Astro.props;

const canonicalURL = new URL(ogUrl);
---

<!-- SEO Meta Tags -->
<meta name="description" content={description} />
<meta
    name="keywords"
    content="latte art, improve latte art, latte art tracker, latte art app, iOS latte art, home barista, espresso, coffee, milk frothing, latte art practice, track latte art, latte art tips, coffee brewing, espresso variables, latte art progress, consistent latte art"
/>
<title>{title}</title>

<!-- Open Graph Meta Tags -->
<meta property="og:title" content={ogTitle} />
<meta property="og:description" content={ogDescription} />
<meta property="og:image" content={ogImage} />
<meta property="og:url" content={canonicalURL} />
<meta property="og:type" content="website" />
<meta property="og:site_name" content="LatteArtist" />

<!-- Twitter Card Meta Tags -->
<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:title" content={twitterTitle} />
<meta name="twitter:description" content={twitterDescription} />
<meta name="twitter:image" content={twitterImage} />
<!-- Optional: <meta name="twitter:site" content="@YourTwitterHandle"> -->

<!-- Canonical URL -->
<link rel="canonical" href={canonicalURL} />
