---
// src/components/ImageColumn.astro
---

<div
    class="w-full md:flex-1 text-left animate-fadeInUp opacity-0"
    style="animation-delay: 0.3s"
>
    {/* Responsive width and flex */}
    <div
        class="bg-card rounded-2xl overflow-hidden border border-gray-100 dark:border-gray-800 shadow-xl shadow-black/2 dark:shadow-none leading-none w-full box-border"
    >
        {/* Card styles with specific shadow and responsive margin */}
        <video
            autoplay
            loop
            muted
            playsinline
            width="1080"
            height="1920"
            class="block max-w-full h-auto rounded-2xl"
            aria-describedby="video-description-1"
        >
            <source src="/assets/demo.mp4" type="video/mp4" />
            Your browser does not support the video tag.
        </video>
        <p id="video-description-1" class="sr-only">
            Demonstration video showing key features of the LatteArtist app.
        </p>
    </div>
</div>

<!-- Styles moved to Tailwind utility classes -->
