---
// src/components/FeaturesCard.astro

const features = [
    {
        text: "Capture each pour with photo and notes",
        svgContent: `
            <path d="M23 19a2 2 0 0 1-2 2H3a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h4l2-3h6l2 3h4a2 2 0 0 1 2 2z"></path>
            <circle cx="12" cy="13" r="4"></circle>
        `,
    },
    {
        text: "Track progress by pattern (e.g., tulips over time)",
        svgContent: `
            <line x1="12" y1="20" x2="12" y2="10"></line>
            <line x1="18" y1="20" x2="18" y2="4"></line>
            <line x1="6" y1="20" x2="6" y2="16"></line>
        `,
    },
    {
        text: "Rate pours to reflect how you felt about them",
        svgContent: `
            <polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"></polygon>
        `,
    },
    {
        text: "Filter by cup, milk type, pattern, and more",
        svgContent: `
            <polygon points="22 3 2 3 10 12.46 10 19 14 21 14 12.46 22 3"></polygon>
        `,
    },
    {
        text: "Share progress collages",
        svgContent: `
            <rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect>
            <circle cx="8.5" cy="8.5" r="1.5"></circle>
            <polyline points="21 15 16 10 5 21"></polyline>
        `,
    },
];
const plannedFeatureIndex = features.length - 1;
---

<div class="w-full animate-fadeInUp opacity-0" style="animation-delay: 1.0s">
    <h2 class="mb-8 text-center text-3xl font-medium">
        How LatteArtist Helps You Improve
    </h2>

    <ul class="grid grid-cols-1 md:grid-cols-2 gap-6">
        {
            features.map((feature, i) => (
                <li
                    class={`
                bg-card p-6 rounded-2xl border border-gray-100 dark:border-gray-800 
                shadow-lg shadow-black/5 dark:shadow-none flex flex-col items-start
                relative transition duration-300 ease-in-out 
                hover:border-brand-accent/50 hover:shadow-brand-glow
                ${i === plannedFeatureIndex ? "opacity-70" : ""}
            `}
                >
                    {i === plannedFeatureIndex && (
                        <span class="absolute top-2 right-2 bg-gray-200 dark:bg-gray-700 text-gray-600 dark:text-gray-400 text-xs font-medium px-2 py-0.5 rounded">
                            Planned
                        </span>
                    )}
                    <div class="w-8 h-8 mb-3 text-brand-accent">
                        <svg
                            aria-hidden="true"
                            class="w-full h-full stroke-[1.5] fill-none"
                            stroke="currentColor"
                            xmlns="http://www.w3.org/2000/svg"
                            viewBox="0 0 24 24"
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            set:html={feature.svgContent}
                        />
                    </div>
                    <p class="font-light text-secondary leading-snug">
                        {feature.text}
                    </p>
                </li>
            ))
        }
    </ul>
</div>
